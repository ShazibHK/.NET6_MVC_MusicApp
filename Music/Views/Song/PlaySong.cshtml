@model Song
<!DOCTYPE html>
<html>
<header>
    <header>
        <partial name="_Nav"/>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="css/bootstrap-5.0.2-dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
        <link rel="stylesheet" href="css/Navbar.css">
        <link rel="stylesheet" href="css/owl.css">
    </header>
</header>
<body class=""> 
    <div style="margin-top: 100px; width:1000px" class="container bg-light">
        <div class="row p-5">
          <div class="col-4">
            <img width="270px" height="270px" src="~/Images/Songs/@Model.Image" class="rounded mx-auto d-block" alt="...">
          </div>
          <div class="col-sm margin-top ">
            <h3 class="ps-5">
            </h3>
            <div class="ps-5">
                <div class="row">
                    <div class="col-12">
                        <h2>@Model.SongName</h2>
                    </div>
                    <div class="col-1">
                        <h6>@Model.language</h6>
                    </div>
                    <div class="col-1">
                        <h6>
                            <small class="text-muted">@Model.type</small></h6>
                    </div>
                    <div class="col-2">
                        <h6 style="color: red;">
                            @Model.Year</h6>
                    </div>
                </div>
            </div>
            
            <div class="ps-5"> 
                <div class="row">
                    <div class="col-3">
                        <p>@Model.duration</p>
                    </div>
                    
                </div>
            </div>
            <div class="ps-5 row">
                <div class="col-3">
                   <audio controls>
                      <source src="~/Audio/@Model.SongPath" type="audio/ogg">
                              Your browser does not support the audio element.
                    </audio>
                </div>       
            </div>
             @if (User.IsInRole("Admin")){
                <div class="ps-5 mt-2 row">
                    <div class="col-3">
                    <a asp-controller="Song" asp-action="EditSong" asp-route-id="@Model.SongId" class="btn btn-outline-secondary" >Edit Song</a>
                    </div> 
                </div>
             }
             @if (User.IsInRole("Admin"))
             {
                 <div class="ps-5 mt-2 row">
                    <div class="col-3">
                       <a asp-controller="Song" asp-action="DeleteSong" asp-route-id="@Model.SongId"class="btn btn-outline-secondary" type="button">Delete Song</a>
                    </div> 
                </div>
             }
          </div>
         
        </div>
    </div>
</body>
</html>