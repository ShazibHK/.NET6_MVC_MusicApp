@model IEnumerable<PlayList>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="PlayList" asp-action="AddPlayList" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                PlayList Name
			</th>
            <th>
                Type
			</th>
            <th>
                Edit
			</th>
            <th>
                Delete
			</th>
            
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">

                    @obj.PlayListName
				</td>
                <td width="30%">
                    @obj.type
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="PlayList" asp-action="EditPlayList" asp-route-id="@obj.PlayListId"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
					</div>
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="PlayList" asp-action="DeletePlayList" asp-route-id="@obj.PlayListId"
                        
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Delete</a>
                    </div>
                </td>
			</tr>
        }
    </tbody>

</table>
</div>